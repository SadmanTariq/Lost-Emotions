	scale = mix(scale_range.x, scale_range.y, factor);
	
	vec2 newUV = UV;
	newUV.x = clamp(UV.x + sin(UV.y * scale + factor * 10.) * amplitude, 0.0, 0.15);
	COLOR = texture(TEXTURE, newUV); 
}"
